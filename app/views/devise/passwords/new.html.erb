<div id="page_wrapper">
  <center>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => "login center"}) do |f| %>
      <h2>Forgot your password?</h2>
      <hr>
      <%= devise_error_messages! %>
      <p>
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true %>
      </p>
      <br>
      <div class="actions">
        <%= f.submit "Send me reset password instructions" %>
      </div>
    <% end %>
  </center>
</div>
